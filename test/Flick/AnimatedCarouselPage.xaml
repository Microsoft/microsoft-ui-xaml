<Page
    x:Class="Flick.AnimatedCarouselPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Flick"
    xmlns:mux="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Dark"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Name="CarouselNextPrevButtonStyle" TargetType="Button">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition To="Disabled">
                                            <VisualTransition.Storyboard>
                                                <Storyboard TargetName="carouselNextPrevButtonTemplateContentPresenter" TargetProperty="FontIcon.Opacity">
                                                    <DoubleAnimation From="1" To="0" Duration="0:0:0.125" EnableDependentAnimation="True"/>
                                                </Storyboard>
                                            </VisualTransition.Storyboard>
                                        </VisualTransition>
                                        <VisualTransition From="Disabled">
                                            <VisualTransition.Storyboard>
                                                <Storyboard TargetName="carouselNextPrevButtonTemplateContentPresenter" TargetProperty="FontIcon.Opacity">
                                                    <DoubleAnimation From="0" To="1" Duration="0:0:0.125" EnableDependentAnimation="True"/>
                                                </Storyboard>
                                            </VisualTransition.Storyboard>
                                        </VisualTransition>
                                    </VisualStateGroup.Transitions>
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Target="carouselNextPrevButtonTemplateContentPresenter.Opacity" Value="1"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <VisualState.Setters>
                                            <Setter Target="carouselNextPrevButtonTemplateContentPresenter.Opacity" Value="0"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{TemplateBinding Background}"/>
                            <ContentPresenter x:Name="carouselNextPrevButtonTemplateContentPresenter" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="{TemplateBinding Padding}" Content="{TemplateBinding Content}" Opacity="{TemplateBinding Opacity}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Name="CarouselNextPrevButtonFontIconStyle" TargetType="FontIcon">
            <Setter Property="FontFamily" Value="{StaticResource SymbolThemeFontFamily}"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
        </Style>
    </Page.Resources>

    <Grid KeyDown="Grid_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="9*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="carouselPrevButton"
                    Grid.Column="0"
                    Style="{StaticResource CarouselNextPrevButtonStyle}"
                    Visibility="{Binding CarouselPrevButtonVisibility}"
                    Height="{Binding ElementName=layout, Path=ItemHeight}">
                <FontIcon Style="{StaticResource CarouselNextPrevButtonFontIconStyle}" Glyph="&#xE76B;"/><!--ChevronLeft-->
            </Button>
            <ScrollViewer x:Name="sv"
                      Grid.Column="1"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Disabled"
                      HorizontalSnapPointsAlignment="Center"
                      HorizontalSnapPointsType="Mandatory"
                      VerticalAlignment="Center"
                      ViewChanged="OnScrollViewerViewChanged"
                      ViewChanging="OnScrollViewerViewChanging"
                      Tapped="OnScrollViewerTapped"
                      VerticalScrollMode="Disabled"
                      HorizontalScrollMode="Auto">
                <local:SnappPointForwardingRepeater
                    x:Name="repeater"
                    HorizontalCacheLength="0.5"
                    VerticalCacheLength="0"
                    RepeatCount="500"
                    ElementPrepared="OnElementPrepared">
                    <mux:ItemsRepeater.Layout>
                        <local:VirtualizingUniformCarouselStackLayout
                            x:Name="layout"
                            ItemWidth="450"
                            ItemHeight="525"
                            ItemScaleRatio="0.5"
                            Spacing="50"
                            HorizontalCacheLength="{Binding ElementName=repeater, Path=HorizontalCacheLength}"
                            RepeatCount="{Binding ElementName=repeater, Path=RepeatCount}"/>
                    </mux:ItemsRepeater.Layout>
                    <mux:ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <!--<Border>-->
                            <UserControl IsTabStop="True" UseSystemFocusVisuals="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <StackPanel>
                                    <Image Source="{Binding UrlMedium}" Stretch="UniformToFill" Height="375"  />
                                    <TextBlock Text="{Binding Description}"  HorizontalAlignment="Center" FontSize="32" Foreground="Gray"/>
                                </StackPanel>
                            </UserControl>
                            <!--</Border>-->
                        </DataTemplate>
                    </mux:ItemsRepeater.ItemTemplate>
                </local:SnappPointForwardingRepeater>
            </ScrollViewer>
            <Button x:Name="carouselNextButton"
                    Grid.Column="2"
                    Style="{StaticResource CarouselNextPrevButtonStyle}"
                    Visibility="{Binding CarouselNextButtonVisibility}"
                    Height="{Binding ElementName=layout, Path=ItemHeight}">
                <FontIcon Style="{StaticResource CarouselNextPrevButtonFontIconStyle}" Glyph="&#xE76C;"/><!--ChevronRight-->
            </Button>
        </Grid>
        <TextBlock x:Name="textBlock" Grid.Row="2">Dummy text</TextBlock>
    </Grid>
</Page>
