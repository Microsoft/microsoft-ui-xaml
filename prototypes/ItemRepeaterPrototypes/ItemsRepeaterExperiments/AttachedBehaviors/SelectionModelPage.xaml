<Page
    x:Class="ItemsRepeaterExperiments.AttachedBehaviors.SelectionModelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ItemsRepeaterExperiments.AttachedBehaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:common="using:ItemsRepeaterExperiments.Common"
    xmlns:windows="using:System.Windows"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <CheckBox Content="Is single select" x:Name="SingleSelectCheckbox"
                Checked="SingleSelectCheckbox_Checked" Unchecked="SingleSelectCheckbox_Unchecked"
                      IsChecked="True"/>
        </StackPanel>
        
        <muxc:ItemsRepeaterScrollHost Grid.Row="2">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <muxc:ItemsRepeater Grid.Row="2" 
                    x:Name="TeamPresenter"
                    ElementPrepared="ItemsRepeater_ElementPrepared"
                    ItemsSource="{x:Bind teams,Mode=OneWay}">

                    <muxc:ItemsRepeater.Resources>
                        <muxc:SelectionModel x:Key="selectionModel" x:Name="selectionModel"
                            SingleSelect="True"
                            Source="{x:Bind TeamPresenter.ItemsSource}"
                            SelectionChanged="SelectionModel_SelectionChanged"/>
                    </muxc:ItemsRepeater.Resources>
                    
                    <muxc:ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="common:Team">

                            <!-- Inline UserControl -->
                            <UserControl x:Name="RootControl" AutomationProperties.Name="{x:Bind Name}"
                                    PointerReleased="Control_PointerReleased"
                                    local:SelectionBehavior.IsEnabled="True"
                                    local:PointerBehaviors.IsEnabled="True">
                                <StackPanel x:Name="RootPanel" BorderBrush="Transparent" 
                                    Padding="8"
                                    BorderThickness="1" MinHeight="200" MinWidth="200">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal"/>
                                            <VisualState x:Name="PointerOver">
                                                <VisualState.StateTriggers>
                                                    <StateTrigger IsActive="{Binding ElementName=RootControl, Path=(local:PointerBehaviors.IsPointerOverNotPressed),Mode=OneWay}"/>
                                                </VisualState.StateTriggers>
                                                <VisualState.Setters>
                                                    <Setter Target="RootPanel.Background" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Pressed">
                                                <VisualState.StateTriggers>
                                                    <StateTrigger IsActive="{Binding ElementName=RootControl, Path=(local:PointerBehaviors.IsPressed),Mode=OneWay}"/>
                                                </VisualState.StateTriggers>
                                                <VisualState.Setters>
                                                    <Setter Target="RootPanel.Background" Value="{ThemeResource SystemControlBackgroundBaseMediumBrush}"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                        
                                        <VisualStateGroup x:Name="SelectionStates">
                                            <VisualState x:Name="Deselected">
                                            </VisualState>
                                            <VisualState x:Name="Selected">
                                                <VisualState.StateTriggers>
                                                    <StateTrigger IsActive="{Binding ElementName=RootControl, Path=(local:SelectionBehavior.IsSelected),Mode=OneWay}"/>
                                                </VisualState.StateTriggers>
                                                <VisualState.Setters>
                                                    <Setter Target="RootPanel.BorderBrush" Value="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <!-- The following bind is marked as valid, but does not update ... -->
                                    <CheckBox IsChecked="{Binding ElementName=RootControl, Path=(local:SelectionBehavior.IsSelected),Mode=OneWay}"/>
                                    <TextBlock Text="{x:Bind Name}" FontSize="24"/>
                                    <TextBlock Text="{x:Bind MembersString}"/>
                                </StackPanel>
                            </UserControl>

                        </DataTemplate>
                    </muxc:ItemsRepeater.ItemTemplate>
                </muxc:ItemsRepeater>
            </ScrollViewer>
        </muxc:ItemsRepeaterScrollHost>
    </Grid>
</Page>
